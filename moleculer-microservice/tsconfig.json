{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"target": "es6",
		"outDir": "dist",
		"checkJs": false,
		"lib": ["ES2020"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules/**/*", "test"]
}
